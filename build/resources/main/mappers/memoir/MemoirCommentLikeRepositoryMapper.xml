<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Recorders.ggogit.domain.memoir.repository.MemoirCommentLikeRepository">

    <insert id="save" parameterType="MemoirCommentLike" keyProperty="memoirCommentId" keyColumn="MEMOIR_COMMENT_ID">
        INSERT INTO MEMOIR_COMMENT_LIKE(MEMBER_ID, MEMOIR_COMMENT_ID)
        VALUES(#{memberId}, #{memoirCommentId})
    </insert>

    <update id="toggle" parameterType="MemoirCommentLike">
        UPDATE MEMOIR_COMMENT_LIKE
        SET ACTIVATE = CASE
        WHEN ACTIVATE = 1 THEN 0
        ELSE 1
        END
        WHERE MEMBER_ID = #{memberId} AND MEMOIR_COMMENT_ID = #{memoirCommentId}
    </update>

    <select id="findById" parameterType="MemoirCommentLike">
        SELECT *
        FROM MEMOIR_COMMENT_LIKE
        WHERE MEMBER_ID = #{memberId} AND MEMOIR_COMMENT_ID = #{memoirCommentId}
    </select>

</mapper>