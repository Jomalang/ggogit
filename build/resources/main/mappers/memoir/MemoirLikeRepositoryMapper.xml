<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Recorders.ggogit.domain.memoir.repository.MemoirLikeRepository">

    <insert id="save" parameterType="MemoirLike" keyProperty="memoirId" keyColumn="MEMOIR_ID">
        INSERT INTO MEMOIR_LIKE(MEMBER_ID, MEMOIR_ID)
        VALUES(#{memberId}, #{memoirId})
    </insert>

    <update id="toggle" parameterType="MemoirLike">
        UPDATE MEMOIR_LIKE
        SET ACTIVATE = CASE
        WHEN ACTIVATE = 1 THEN 0
        ELSE 1
        END
        WHERE MEMBER_ID = #{memberId} AND MEMOIR_ID = #{memoirId}
    </update>

    <select id="findById" parameterType="MemoirLike">
        SELECT *
        FROM MEMOIR_LIKE
        WHERE MEMBER_ID = #{memberId} AND MEMOIR_ID = #{memoirId}
    </select>

</mapper>