<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Recorders.ggogit.domain.memoir.repository.MemoirCommentRepository">

    <insert id="save" parameterType="MemoirComment"
            useGeneratedKeys="true" keyProperty="id" keyColumn="ID">
        INSERT INTO MEMOIR_COMMENT (MEMBER_ID, MEMOIR_ID, CONTENT)
        VALUES (#{memberId}, #{memoirId}, #{content})
    </insert>

    <delete id="delete">
        DELETE MEMOIR_COMMENT
        WHERE ID = #{id}
    </delete>

    <update id="update" parameterType="MemoirComment">
        UPDATE MEMOIR_COMMENT
        SET CONTENT = #{content}
    </update>

    <select id="findAllByMemoirId" resultType="MemoirComment">
        SELECT *
        FROM MEMOIR_COMMENT
        WHERE MEMOIR_ID = #{memoirId}
    </select>

    <select id="findById" resultType="MemoirComment">
        SELECT *
        FROM MEMOIR_COMMENT
        WHERE ID = #{id}
    </select>

    <update id="increaseLike">
        UPDATE MEMOIR_COMMENT
        SET LIKE_COUNT = LIKE_COUNT+1
        WHERE ID = #{id}
    </update>

</mapper>